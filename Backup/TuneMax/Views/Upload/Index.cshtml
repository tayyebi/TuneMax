@model IEnumerable<TuneMax.Models.Upload>

@{
    ViewBag.Title = "آپلود";
}

<p class="create">
    @Html.ActionLink("آپلود", "Create")
</p>
<table class="gv">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadGroup.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentLength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UploadGroup.Name)
        </td>
        <td>
            @Ajax.ActionLink("لینک دانلود", "Details", new { id=item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dynamic", OnComplete = "OpenDialog()" })
            @Ajax.ActionLink("حذف", "Delete", new { id=item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dynamic", OnComplete = "OpenDialog()" })
            <a href="@item.DownloadLink">دانلود</a>
        </td>
    </tr>
}

</table>
