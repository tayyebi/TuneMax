@model IEnumerable<TuneMax.Models.Product>

@{
    ViewBag.Title = "آرشیو محصولات";
}

<table class="gv">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductGroup.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductGroup.Name)
        </td>
        <td>
            <img src="@item.Image" alt="@item.Title" title="@item.Title" />
        </td>
        <td>
            @Html.ActionLink("نمایش", "ProductShow", new { id = item.Id })
        </td>
    </tr>
}
</table>
