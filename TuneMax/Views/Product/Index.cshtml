@model IEnumerable<TuneMax.Models.Product>

@{
    ViewBag.Title = "محصولات";
}

<p class="create">
    @Ajax.ActionLink("ایجاد", "Create", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dynamic", OnComplete = "OpenDialog()" })
</p>
<table class="gv">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceInDollar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductGroup.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceInDollar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductGroup.Name)
        </td>
        <td>
            @Ajax.ActionLink("ویرایش", "Edit", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dynamic", OnComplete = "OpenDialog()" })
            @Ajax.ActionLink("جزئیات", "Details", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dynamic", OnComplete = "OpenDialog()" })
            @Ajax.ActionLink("حذف", "Delete", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dynamic", OnComplete = "OpenDialog()" })
        </td>
    </tr>
}
</table>
