<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/Public.css" rel="stylesheet" />
    <link href="~/Content/themes/THEME/jquery-ui-1.10.3.css" rel="stylesheet" />
    <link href="~/Content/slider/style.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/-HtmlEditor/ckeditor.js"></script>

</head>
<body>
@if (Session["username"]!=null)
{
   <div class="UserStatus">@Html.Action("UserStatus","Home")</div>
}
<div class="Banner"></div>
<div class="Slider">@Html.Action("Slider", "Home")</div>
<div id="dynamic"></div>
<div class="Main">
@RenderBody()
</div>

    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script> 
    <script src="~/-Slider/slider.js"></script>
    <script src="~/-Slider/script.js"></script>

    <script type="text/javascript">
        $('#dynamic').hide();
        $(".error").hide('slide', '', 8000);
        $('.C6').draggable();
        $('.UserStatus a , .C6 a , .C7 a , .gv a , input[type="submit"]').button();
        function OpenDialog() {
            $('#dynamic').show();
        }
        @RenderSection("scripts", required: false)
    </script>
</body>
</html>
